<!DOCTYPE html>
<html>
<head>
	<title>Bookers1</title>
	<%= csrf_meta_tags %>
	<%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
  <h1>Books</h1>
   <table>
    <thead>
  	 <tr>
  	   <th>Title</th>
  	   <th>body</th>
        <th colspan="3"></th>
  	 </tr>
    </thead>
    <tbody>
  	    <% @books.each do |book| %>
           <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to 'show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book_path(book), method: :delete ,data: { confirm: 'Are you sure?' }%></td>
  	       </tr>
        <% end %>
    </tbody>
   </table>

  <h2>New Book</h2>
     <% if @book.errors.any? %>
   <div class="alert alert-warning">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
       </ul>
   </div>
  <% end %>

    <!-- 投稿フォーム -->
 <%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body<h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>

<% end %>

</body>
</html>
